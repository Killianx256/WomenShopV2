<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.womenshop.womenshopv2.StockController" style="-fx-padding: 20;">
    <Label text="Manage Stock" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Label fx:id="productNameLabel" text="Product: " style="-fx-font-size: 16px;" />

    <Label text="Enter quantity to add/remove:" style="-fx-font-size: 14px;" />
    <TextField fx:id="quantityTextField" promptText="Quantity" />

    <Button fx:id="addStockButton" text="Add Stock" onAction="#onAddStock" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px;" />
    <Button fx:id="removeStockButton" text="Remove Stock" onAction="#onRemoveStock" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10px;" />

    <Button text="Cancel" onAction="#onCancel" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-padding: 10px;" />
</VBox>
